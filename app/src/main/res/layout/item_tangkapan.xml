<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="11dp">

    <TextView
        android:fontFamily="@font/poppinsbold"
        android:textSize="12sp"
        android:textColor="@color/bluebg"
        android:layout_marginStart="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_roundedbluesoftbg"
        android:text="@string/contoh_tanggal"
        android:id="@+id/tv_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bluesoft">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/bluebg"
                android:id="@+id/tv_namaperahu"
                android:text="Perahu Makmur Berkah"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <!-- Template TableRow yang akan diulang -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tv_fishspecies"
                        android:textColor="@color/bluebg"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Jenis Ikan dan Berat"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_weight="1"
                        android:textColor="@color/bluebg"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text=""
                        android:layout_marginStart="10dp"/>
                </TableRow>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_marginStart="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah total tangkapan hari ini:"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="14sp" />

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
