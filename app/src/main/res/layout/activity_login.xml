<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".loginregist.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-210dp"
        android:src="@drawable/bgataslogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MASUK"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/bluebg"
        android:textSize="40dp"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Masuk ke akun anda!"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/bluesoft"
        android:textSize="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="100dp" />

    <EditText
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="20dp"
        android:id="@+id/etUsername"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded20"
        android:hint="Nama Pengguna"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/ic_uname"
        android:padding="12dp" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/etPassword"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded20"
        android:hint="Kata Sandi"
        android:fontFamily="@font/poppinsmedium"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_lock"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/bluebg"
            android:fontFamily="@font/poppinsmedium"
            android:text="Belum Punya Akun ?"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:text="Daftar Sekarang!"
            android:textColor="@color/bluebg"
            android:fontFamily="@font/poppinsbold"
            android:paddingLeft="8dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <Button
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="Masuk"
        android:textColor="@color/white"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bg_button"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
