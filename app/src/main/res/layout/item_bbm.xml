<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:fontFamily="@font/poppinsbold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/bg_roundedbluebg"
        android:text="@string/contoh_tanggal"
        android:id="@+id/tv_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/bg_rounded20"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TableRow>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Nama Perahu"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text=":"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_namaperahu"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Nama Perahu"
                    android:layout_marginStart="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Jenis BBM"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text=":"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_jenisbbm"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Contoh BBM"
                    android:layout_marginStart="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Penggunaan BBM"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text=":"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_totalbbm"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Total BBM"
                    android:layout_marginStart="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Harga per Liter"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text=":"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_hargabbm"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Harga BBM"
                    android:layout_marginStart="10dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Jumlah Harga BBM"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text=":"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_totalhargabbm"
                    android:layout_weight="1"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Total Harga"
                    android:layout_marginStart="10dp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
